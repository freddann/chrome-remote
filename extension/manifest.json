{
    "name": "Sample Messaging extension",
    "version": "1.3.1",
    "description": "Listens to requests from the main app and performs tasks.",
    "browser_action": {
        "default_title": "Send message to other apps",
        "default_icon": "ui/icon_16.png",
        "default_popup": "ui/index.html"
    },
    "background": {
        "scripts": [
            "eventPage.js"
        ],
        "persistent": false
    },
    "permissions": [
        "notifications",
        "tabs",
        "<all_urls>"
    ],
    "manifest_version": 2
}